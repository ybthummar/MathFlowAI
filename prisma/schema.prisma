// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Team model - stores team registration data
model Team {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  registrationId String     @unique @default(cuid())
  teamName       String     @unique
  department     String
  leaderEmail    String
  leaderPhone    String
  status         String     @default("PENDING") // PENDING, APPROVED, REJECTED, WAITLIST
  agreedToRules  Boolean    @default(true)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  
  // Relations
  members        Member[]
  
  @@index([department])
  @@index([status])
  @@index([createdAt])
}

// Member model - stores individual team member data
model Member {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  phone     String
  rollNo    String
  year      String
  isLeader  Boolean  @default(false)
  createdAt DateTime @default(now())
  
  // Relations
  teamId    String   @db.ObjectId
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@index([teamId])
  @@index([email])
}

// Admin model - stores admin credentials
model Admin {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Rate limiting model
model RateLimit {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  ip          String
  endpoint    String
  count       Int      @default(1)
  windowStart DateTime @default(now())
  
  @@unique([ip, endpoint])
  @@index([windowStart])
}
